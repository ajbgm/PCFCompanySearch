<?xml version="1.0" encoding="utf-8" ?>
<manifest>
  <control 
    namespace="proximo3" 
    constructor="CompanyHousePCF" 
    version="0.0.2" 
    display-name-key="CompanyHousePCF" 
    description-key="CompanyHousePCF description" 
    control-type="standard">

    <!-- Input properties -->
    <property 
      name="searchCompanyByName"
      display-name-key="Company Name"
      description-key="Company Name to search"
      of-type="SingleLine.Text"
      usage="bound"
      required="false" />

    <property 
      name="companyName"
      display-name-key="Company Name"
      description-key="Company Name to search"
      of-type="SingleLine.Text"
      usage="bound"
      required="true" />

    <property 
      name="buttonSearchText"
      display-name-key="Button Search Text"
      description-key="Text to display on the search button"
      of-type="SingleLine.Text"
      usage="input"
      required="true" />

    <property 
      name="buttonColor"
      display-name-key="Button Background Colour"
      description-key="Background colour for buttons"
      of-type="SingleLine.Text"
      usage="input"
      required="false"
    />

    <property 
      name="buttonTextColor"
      display-name-key="Button Text Colour"
      description-key="Text colour for buttons"
      of-type="SingleLine.Text"
      usage="input"
      required="false"
    />

    <property
      name="searchCompanyEndpointEnvironmentVariable"
      display-name-key="Search Company Endpoint Environment Variable"
      description-key="Environment variable holding the endpoint"
      of-type="SingleLine.Text"
      usage="input"
      required="true" />

   <property
      name="ItemsToRetrieve"
      display-name-key="Items To Retrieve"
      description-key="Number of items to retrieve from the API. Default is 25. Max is 100"
      of-type="SingleLine.Text"
      usage="input"
      required="false" />
    <property name="companynumber" display-name-key="Company Number" of-type="SingleLine.Text" usage="bound" />
    <property name="address1" display-name-key="Address 1" of-type="SingleLine.Text" usage="bound" />
    <property name="address2" display-name-key="Address 2" of-type="SingleLine.Text" usage="bound" />
    <property name="address3" display-name-key="Address 3" of-type="SingleLine.Text" usage="bound" />
    <property name="address4" display-name-key="Address 4" of-type="SingleLine.Text" usage="bound" />
    <property name="postcode" display-name-key="Postcode" of-type="SingleLine.Text" usage="bound" />
    <property name="country" display-name-key="Country" of-type="SingleLine.Text" usage="bound" />
    <property name="companyCreated" display-name-key="Company Created" of-type="DateAndTime.DateOnly" usage="bound" />

    <!-- Resources -->
    <resources>
      <code path="index.ts" order="1"/>
    </resources>

    <!-- Features -->
    <feature-usage>
      <uses-feature name="WebAPI" required="false" />
    </feature-usage>

  </control>
</manifest>
